<!doctype html>
<html>

<head>
  <title>Barista</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Zilla+Slab+Highlight:wght@700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Chango&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="style.css">
</head>

<body>




  <div class="page-header text-center">
    <h1 class="profile">Profile Page</h1>
    <a href="/logout" class="btn btn-default btn-sm">Logout</a>
  </div>

  <!--  -->

  <section class="box">
    <h3 class="orderTitles">Incoming Orders:</h3>
    <ul class="messages">
      <% for(var i=0; i<messages.length; i++) {%>
      <% if(!messages[i].completed) { %>
      <li class="message">
        <p class="left">Customer Name: <span class="orderItem"><%= messages[i].name %></span></p>
        <p class="left">Customer Order: <span class="orderItem"><%= messages[i].order %></span></p>
        <p class="left">Size: <span class="orderItem"><%= messages[i].size %></span> </p>
      </li>
      <% }} %>
    </ul>
  </section>

  <section class="box">
    <h3 class="orderTitles" id="complete">All Completed Orders:</h3>
    <ul class="messages">
      <% for(var i=0; i<messages.length; i++) {%>
      <% if(messages[i].completed){ %>
      <li class="message">
        <p class="left">Customer Name: <span class="orderItem done"><%= messages[i].name %></span></p>
        <p class="left">Customer Order: <span class="orderItem "><%= messages[i].order %></span></p>
        <p class="left">Size: <span class="orderItem "><%= messages[i].size %></span> </p>
        <p class="left">Barista: <span class="orderItem "><%= messages[i].barista %></span> </p>
      </li>
      <% }} %>
    </ul>
    <span><i id="trash" class="fa fa-trash" aria-hidden="true"></i></span>
  </section>


  <section class="box">
    <h3 class="orderTitles">Your Completed Orders:</h3>
    <ul class="messages">
      <% for(var i=0; i<messages.length; i++) {%>
      <% if(messages[i].barista == user.local.email) { %>

      <li class="message">
        <p class="left">Customer Name: <span class="orderItem done"><%= messages[i].name %></span></p>
        <p class="left">Customer Order: <span class="orderItem "><%= messages[i].order %></span></p>
        <p class="left">Size: <span class="orderItem "><%= messages[i].size %></span> </p>
        <p class="left">Barista: <span class="orderItem "><%= messages[i].barista %></span> </p>
      </li>
      <% }} %>
    </ul>

  </section>




  <script src="main.js"></script>

</body>

</html>
